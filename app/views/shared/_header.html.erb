<hr>
<div class="container">
  <nav class = "navbar navbar-expand-lg navbar-light bg-light ">
    <div>
      <%= link_to image_tag("https://i.imgur.com/jqswb49.png", :border=>0, :width=>50, :height=>50), home_path, class: "navbar-brand "%>

      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    </div>

    <%= form_tag(restaurants_path, :method => "get",
                              id: "search-form",
                              class:"form-inline center col-xs-4 col-sm-4 col-md-4") do %>

      <%= text_field_tag :search,
                          params[:search],
                          placeholder: "Search Posts",
                          class: "form-control mr-sm-2" %>

      <%= submit_tag "Пошук", class: "btn btn-outline-success" %>
    <% end %>
    <div class = "collapse navbar-collapse" id = "navbarSupportedContent">
      <ul class = "navbar-nav mr-auto">
        <li class = "nav-item active"></li>
      </ul>
      <form class = "form-inline my-2 my-lg-0  ">
        <div class = "nav-item">
          <% if current_user && current_user.admin == true %>
            <%= link_to 'Додати заклад', new_restaurant_path, class:'blog_link' %>

            <%= link_to 'Додати тип закладу', new_institution_path, class:'blog_link' %>

            <%= link_to 'Додати місто', new_city_path, class:'blog_link' %>
          <% end %>
          <% if current_user %>
          <!-- <div class = "badge badge-light">
              Logged in as <%= current_user.email %>
            </div> -->
              <%= link_to "Вихід", "/logout", class:'btn btn-outline-success my-2 my-sm-0'  %>
          <% else %>
              <%= link_to "Вхід", login_path, class:'btn btn-outline-success my-2 my-sm-0'  %>
              <%= link_to "Реєстрація", signup_path, class:'btn btn-success my-2 my-sm-0'%>
          <% end %>
        </div>
      </form>
    </div>
  </nav>
</div>
